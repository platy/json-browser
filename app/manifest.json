{
    "manifest_version": 2,
    
    "name": "__MSG_appName__",
    "description": "__MSG_appDescription__",
    "version": "0.8.2",
    
    "permissions": [
        "tabs",
        "webRequest",
        "webRequestBlocking",
        "storage",
        "http://*/*",
        "https://*/*",
        "<all_urls>"
    ],
    "browser_action": {
        "default_icon": {
            "19": "images/logo-19.png",
            "38": "images/logo-38.png"
        },
        "default_title": "JSON browser, Click to toggle Accept header between json and default"
    },
    "options_page": "options.html",
    "default_locale": "en",
    "background": {
        "scripts": [
            "scripts/background.js",
            "scripts/chromereload.js"
        ]
    },
    "web_accessible_resources": [
        "bower_components/jsonary/renderers/images/*.png",
        "bower_components/jsonary/renderers/common.css",
        "bower_components/jsonary/renderers/api.jsonary.css",
        "styles/browser.css",
        "styles/chrome-bootstrap.css",
        "images/logo-19.png"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>",
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "scripts/content.js",
                "bower_components/jsonary/node-package/super-bundle/jsonary-super-bundle.js",
                "bower_components/jsonary/renderers/api.jsonary.js",
                "bower_components/jsonary/renderers/list-schemas.js",
                "bower_components/jsonary/renderers/list-links.js",
                "scripts/popup.js"
            ],
            "run_at": "document_end",
            "all_frames": false
        }
    ],
    "icons": {
        "19": "images/logo-19.png",
        "38": "images/logo-38.png",
        "128": "images/logo-128.png"
    }
}